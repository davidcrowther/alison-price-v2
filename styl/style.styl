}



article.testimonials{
  padding-top 69px
  padding-bottom 118px
  background #FFF
  &.gray{
    background #F5F5F5 
  }
  .icon-gray-tick{
    display block
    margin auto
    margin-bottom 25px
  }
  cite{
    display block
    margin auto
    max-width 600px
    text-align center
    font-family OSLI 
    color #666
    margin-bottom 12px
    line-height 186%
  }
  p.name{
    text-align center
    color #414141
    font-family OSL
    strong{
      color #333333
      font-family OSR 
    } 
  }
  .carousel{
    .carousel-indicators{
      bottom -33px !important
      // margin 0 auto
      li{
        border none
        width 11px
        height 11px
        margin-left 3px
        margin-right 3px
        margin-bottom 0
        background #cccccc
        &.active{
          background #b2d040
        }
      }
    }
  }
}


